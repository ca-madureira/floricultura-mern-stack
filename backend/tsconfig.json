{
  "compilerOptions": {
    "target": "es2016",
    "module": "commonjs",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "typeRoots": ["node_modules/@types", "src/@types"],
    "types": ["node", "express"],
    "outDir": "./dist", // Especifica onde os arquivos JavaScript compilados serão emitidos
    "moduleResolution": "node", // Usar resolução de módulos do Node.js
    "resolveJsonModule": true, // Permite importar arquivos JSON como módulos
    "noEmitOnError": true, // Não gera arquivos de saída se houver erros de tipo
    "removeComments": true, // Remove comentários no código emitido
    "strictNullChecks": true, // Trata null e undefined de forma rigorosa
    "declaration": true, // Gera arquivos .d.ts junto com os arquivos .js
    "sourceMap": true, // Gera arquivos .map para depuração
    "lib": ["es2016", "esnext.asynciterable"], // Adiciona bibliotecas para o ambiente de execução
    "skipDefaultLibCheck": true
  },
  "include": [
    "src/**/*.ts" // Inclui todos os arquivos TypeScript dentro da pasta src
  ],
  "exclude": [
    "node_modules", // Exclui node_modules da compilação
    "dist" // Exclui a pasta dist da compilação
  ]
}
